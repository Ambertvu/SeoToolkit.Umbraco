<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

    <PropertyGroup>
        <uSeoToolkitUmbracoSiteAuditContentFilesPath>$(MSBuildThisFileDirectory)..\App_Plugins\uSeoToolkitSiteAudit\**\*.*</uSeoToolkitUmbracoSiteAuditContentFilesPath>
    </PropertyGroup>

    <Target Name="CopyuSeoToolkitUmbracoSiteAuditAssets" BeforeTargets="Build">
        <ItemGroup>
			<uSeoToolkitUmbracoSiteAuditContentFiles Include="$(uSeoToolkitUmbracoSiteAuditContentFilesPath)" />
        </ItemGroup>
        <Message Text="Copying uSeoToolkit files: $(uSeoToolkitUmbracoSiteAuditContentFilesPath) - #@(uSeoToolkitUmbracoSiteAuditContentFiles->Count()) files"  Importance="high" />
        <Copy
            SourceFiles="@(uSeoToolkitUmbracoSiteAuditContentFiles)"
            DestinationFiles="@(uSeoToolkitUmbracoSiteAuditContentFiles->'$(MSBuildProjectDirectory)\App_Plugins\uSeoToolkitSiteAudit\%(RecursiveDir)%(Filename)%(Extension)')"
            SkipUnchangedFiles="true" />

    </Target>

    <Target Name="ClearuSeoToolkitUmbracoSiteAuditAssets" BeforeTargets="Clean">
        <ItemGroup>
			<uSeoToolkitUmbracoSiteAuditDir Include="$(MSBuildProjectDirectory)\App_Plugins\uSeoToolkitSiteAudit\" />
        </ItemGroup>
        <Message Text="Clear old uSeoToolkit data"  Importance="high" />
        <RemoveDir Directories="@(uSeoToolkitUmbracoSiteAuditDir)"  />
    </Target>

</Project>
