<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

    <PropertyGroup>
        <uSeoToolkitUmbracoCoreContentFilesPath>$(MSBuildThisFileDirectory)..\App_Plugins\uSeoToolkit\**\*.*</uSeoToolkitUmbracoCoreContentFilesPath>
    </PropertyGroup>

    <Target Name="CopyuSeoToolkitUmbracoCoreAssets" BeforeTargets="Build">
        <ItemGroup>
            <uSeoToolkitUmbracoCoreContentFiles Include="$(uSeoToolkitUmbracoCoreContentFilesPath)" />
        </ItemGroup>
        <Message Text="Copying uSeoToolkit files: $(uSeoToolkitUmbracoCoreContentFilesPath) - #@(uSeoToolkitUmbracoCoreContentFiles->Count()) files"  Importance="high" />
        <Copy
            SourceFiles="@(uSeoToolkitUmbracoCoreContentFiles)"
            DestinationFiles="@(uSeoToolkitUmbracoCoreContentFiles->'$(MSBuildProjectDirectory)\App_Plugins\uSeoToolkit\%(RecursiveDir)%(Filename)%(Extension)')"
            SkipUnchangedFiles="true" />

    </Target>

    <Target Name="ClearuSeoToolkitUmbracoCoreAssets" BeforeTargets="Clean">
        <ItemGroup>
            <uSeoToolkitUmbracoCoreDir Include="$(MSBuildProjectDirectory)\App_Plugins\uSeoToolkit\" />
        </ItemGroup>
        <Message Text="Clear old uSeoToolkit data"  Importance="high" />
        <RemoveDir Directories="@(uSeoToolkitUmbracoCoreDir)"  />
    </Target>

</Project>
