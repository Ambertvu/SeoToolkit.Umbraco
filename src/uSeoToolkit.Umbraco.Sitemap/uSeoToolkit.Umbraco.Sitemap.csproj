<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net5.0</TargetFramework>
    <ContentTargetFolders>.</ContentTargetFolders>
    <Product>uSeoToolkit Sitemap</Product>
    <PackageId>uSeoToolkit.Umbraco.Sitemap</PackageId>
    <Title>uSeoToolkit Sitemap</Title>
    <Description>An Umbraco plugin to easily set your sitemap up</Description>
    <PackageTags>umbraco plugin package</PackageTags>
    <RootNamespace>uSeoToolkit.Umbraco.Sitemap</RootNamespace>
    <PackageProjectUrl>https://github.com/patrickdemooij9/uSeoToolkit.Umbraco</PackageProjectUrl>
    <RepositoryUrl>https://github.com/patrickdemooij9/uSeoToolkit.Umbraco</RepositoryUrl>
    <Version>1.0.0-alpha</Version>
  </PropertyGroup>

  <ItemGroup>
    <None Include="build\**\*.*">
      <Pack>True</Pack>
      <PackagePath>build</PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <None Remove="App_Plugins\uSeoToolkit\Sitemap\Displays\DocumentType\sitemapSettings.controller.js" />
    <None Remove="App_Plugins\uSeoToolkit\Sitemap\Displays\DocumentType\sitemapSettings.html" />
    <None Remove="App_Plugins\uSeoToolkit\Sitemap\package.manifest" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="App_Plugins\uSeoToolkit\Sitemap\Displays\DocumentType\sitemapSettings.controller.js">
      <ExcludeFromSingleFile>true</ExcludeFromSingleFile>
      <CopyToPublishDirectory>Always</CopyToPublishDirectory>
    </Content>
    <Content Include="App_Plugins\uSeoToolkit\Sitemap\Displays\DocumentType\sitemapSettings.html">
      <ExcludeFromSingleFile>true</ExcludeFromSingleFile>
      <CopyToPublishDirectory>Always</CopyToPublishDirectory>
    </Content>
    <Content Include="App_Plugins\uSeoToolkit\Sitemap\package.manifest">
      <ExcludeFromSingleFile>true</ExcludeFromSingleFile>
      <CopyToPublishDirectory>Always</CopyToPublishDirectory>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\uSeoToolkit.Umbraco.Sitemap.Core\uSeoToolkit.Umbraco.Sitemap.Core.csproj" />
    <ProjectReference Include="..\uSeoToolkit.Umbraco.Common\uSeoToolkit.Umbraco.Common.csproj" />
  </ItemGroup>

</Project>
