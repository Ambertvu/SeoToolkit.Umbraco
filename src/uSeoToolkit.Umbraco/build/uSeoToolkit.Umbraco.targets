<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

    <PropertyGroup>
        <uSeoToolkitUmbracoContentFilesPath>$(MSBuildThisFileDirectory)..\App_Plugins\uSeoToolkit\**\*.*</uSeoToolkitUmbracoContentFilesPath>
    </PropertyGroup>

    <Target Name="CopyuSeoToolkitUmbracoAssets" BeforeTargets="Build">
        <ItemGroup>
			<uSeoToolkitUmbracoContentFiles Include="$(uSeoToolkitUmbracoContentFilesPath)" />
        </ItemGroup>
        <Message Text="Copying uSeoToolkit files: $(uSeoToolkitUmbracoContentFilesPath) - #@(uSeoToolkitUmbracoContentFiles->Count()) files"  Importance="high" />
        <Copy
            SourceFiles="@(uSeoToolkitUmbracoContentFiles)"
            DestinationFiles="@(uSeoToolkitUmbracoContentFiles->'$(MSBuildProjectDirectory)\App_Plugins\uSeoToolkit\%(RecursiveDir)%(Filename)%(Extension)')"
            SkipUnchangedFiles="true" />

    </Target>

    <Target Name="ClearuSeoToolkitUmbracoAssets" BeforeTargets="Clean">
        <ItemGroup>
			<uSeoToolkitUmbracoDir Include="$(MSBuildProjectDirectory)\App_Plugins\uSeoToolkit\" />
        </ItemGroup>
        <Message Text="Clear old uSeoToolkit data"  Importance="high" />
        <RemoveDir Directories="@(uSeoToolkitUmbracoDir)"  />
    </Target>

</Project>
